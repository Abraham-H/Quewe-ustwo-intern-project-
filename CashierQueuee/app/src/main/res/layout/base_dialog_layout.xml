<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_dialog_layout"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.33"
        android:weightSum="1">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_lindex"
            android:id="@+id/base_dialog_logo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <!-- Different Layout================================================================================================================-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:layout_height="0dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/base_dialog_text"
            style="@style/subheaderTextStyle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:id="@+id/base_dialog_image"
            android:src="@drawable/sad_face_icon"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08" />

    </LinearLayout>

    <!-- Different Layout================================================================================================================-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal" >

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="YES"
                android:background="@null"
                android:id="@+id/base_dialog_yes"
                android:layout_weight="0.15"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="NO"
                android:background="@null"
                android:id="@+id/base_dialog_no"
                android:layout_weight="0.15"/>

        </LinearLayout>
</LinearLayout>