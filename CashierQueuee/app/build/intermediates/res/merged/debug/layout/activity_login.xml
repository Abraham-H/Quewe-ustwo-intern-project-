<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white"
    tools:context="com.example.abraham.cashierqueuee.LoginActivity">

    <TextView
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="bottom|center_horizontal"
        style="@style/header_text_style"
        android:text="@string/welcome_text"
        android:id="@+id/cashier_text_view"
        />

    <TextView
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        style="@style/normal_text_style"
        android:text="@string/help_text"
        android:gravity="top|center_horizontal"
        android:id="@+id/cashier_number"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="250sp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/start_queue_image_button"
        android:src="@drawable/happy_face_icon"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        />

    <TextView
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="@string/scanning_text"
        android:textColor="@color/black"
        android:gravity="top|center_horizontal"
        android:id="@+id/start_queue_text"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
