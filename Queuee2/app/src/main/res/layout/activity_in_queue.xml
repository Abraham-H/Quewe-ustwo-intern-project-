<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityInQueueMainRelativeLayout"
    tools:context="app.com.example.android.queuee2.InQueueActivity">

    <app.com.example.android.queuee2.CancelHeader
        android:id="@+id/in_line_pop_up_view"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_width="500dp"
        android:layout_height="50dp">
    </app.com.example.android.queuee2.CancelHeader>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/waiting_animation"
            android:layout_width="300sp"
            android:layout_height="300sp"
            fresco:placeholderImage="@drawable/waiting_animation"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            style="@style/normal_text_style"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/queuePositionTextView"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/snooze_button"
            android:src="@drawable/snooze_button_selector"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/waiting_animation"
            android:layout_alignStart="@+id/waiting_animation" />

</RelativeLayout>
