<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".NewQueueView"
    android:weightSum="1">

    <TextView
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        style="@style/header_text_style"
        android:text="@string/welcome_text"
        android:id="@+id/welcome_text_view"
        android:layout_weight="0.75"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_to_queue_image_button" />

    <TextView
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        style="@style/normal_text_style"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/num_in_queue_textview"
        android:text="No Queue Found"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.21"
        android:layout_above="@+id/add_to_queue_image_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_to_queue_image_button"
        android:src="@drawable/add_to_queue_button_selector"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <app.com.example.android.queuee2.YourInLinePopUpView
        android:id="@+id/in_line_pop_up_view"
        android:visibility="invisible"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_margin="50dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
    </app.com.example.android.queuee2.YourInLinePopUpView>

</RelativeLayout>
