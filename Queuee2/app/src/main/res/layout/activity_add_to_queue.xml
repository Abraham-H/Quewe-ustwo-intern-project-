<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewQueueView"
    android:weightSum="1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_weight="0.20"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="fitEnd"
                android:id="@+id/add_to_queue_activity_logo_image_view" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/headerTextStyle"
            android:gravity="bottom|center_horizontal"
            android:text="@string/add_to_queue_activity_welcome_title"
            android:id="@+id/add_to_queue_header_text_view"
            />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal"
        style="@style/subheaderTextStyle"
        android:id="@+id/add_to_queue_subtitle_text_view"
        android:text="@string/add_to_queue_activity_welcome_subtitle"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/add_to_queue_image_button"
        android:src="@drawable/add_to_queue_button_selector"
        android:background="@null"
        android:scaleType="fitCenter"
         />

    <TextView
        android:layout_weight="0.20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center_horizontal"
        style="@style/subheaderTextStyle"
        android:text="@string/add_to_queue_activity_footer"
        android:id="@+id/add_to_queue_footer_text_view"
         />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal|bottom" />


</LinearLayout>
